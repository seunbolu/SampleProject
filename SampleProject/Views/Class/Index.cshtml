@model IEnumerable<SampleProject.Models.Class>
@{
    ViewBag.Title = "Index";
}

<h2>Class List</h2>
<button type="submit" onclick="window.location='@Url.Action("New", "Class")'">New Class</button>

<table>
    <thead>
        <tr>
            <th>Class ID</th>
            <th>Class Name</th>
            <th>Class Details</th>


</thead>
    <tbody class="abc">
        @if (!Model.Any())
        {
        }
        else
        {

            foreach (var Sub in Model)
            {
        <tr>
            <td>    @Sub.Id </td>
            <td>    @Sub.ClassName  </td>
            <td>    @Sub.Detail  </td>

            <td>

                <a href="@Url.Action("Edit", new { id = Sub.Id})" class="btn btn-warning shiny input-xs"><i class="btn-label glyphicon glyphicon-edit"></i></a>
            </td>
            <td>

                <a href="@Url.Action("Delete", new { id = Sub.Id })" new { onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger shiny input-xs"><i class="btn-label glyphicon glyphicon-remove-circle"></i></a>

            </td>
        </tr>
            }

        }
    </tbody>
