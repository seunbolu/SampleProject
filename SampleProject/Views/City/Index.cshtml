@model IEnumerable<SampleProject.Models.City>
@{
    ViewBag.Title = "Index";
}

<h2>City List</h2>
<button type="submit" onclick="window.location='@Url.Action("New", "City")'">New Subject</button>

<table>
    <thead>
        <tr>
            <th>City ID</th>
            <th>City Name</th>




    </thead>
    <tbody class="abc">
        @if (!Model.Any())
        {
        }
        else
        {

            foreach (var Sub in Model)
            {
                <tr>
                    <td>    @Sub.CityId </td>
                    <td>    @Sub.Name </td>


                    <td>

                        <a href="@Url.Action("Edit", new { id = Sub.CityId})" class="btn btn-warning shiny input-xs"><i class="btn-label glyphicon glyphicon-edit"></i></a>
                    </td>
                    <td>

                        <a href="@Url.Action("Delete", new { id = Sub.CityId })" new { onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger shiny input-xs"><i class="btn-label glyphicon glyphicon-remove-circle"></i></a>

                    </td>
                </tr>
            }

        }
    </tbody>
</table>


