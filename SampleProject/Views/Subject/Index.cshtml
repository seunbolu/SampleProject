@model IEnumerable<SampleProject.Models.Subject>
@{
    ViewBag.Title = "Index";
}

<h2>Subject List</h2>
<button type="submit" onclick="window.location='@Url.Action("New", "Subject")'">New Subject</button>

<table>
    <thead>
        <tr>
            <th>Subject ID</th>
            <th>Subject Name</th>
            

    </thead>
    <tbody class="abc">
        @if (!Model.Any())
        {
        }
        else
        {

            foreach (var Sub in Model)
            {
                <tr>
                    <td>    @Sub.SubjectId </td>
                    <td>    @Sub.SubjectName   </td>
                    
                    <td>

                        <a href="@Url.Action("Edit", new { id = Sub.SubjectId})" class="btn btn-warning shiny input-xs"><i class="btn-label glyphicon glyphicon-edit"></i></a>
                    </td>
                    <td>

                        <a href="@Url.Action("Delete", new { id = Sub.SubjectId  })" new { onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger shiny input-xs"><i class="btn-label glyphicon glyphicon-remove-circle"></i></a>

                    </td>
                </tr>
            }

        }
    </tbody>
</table>

